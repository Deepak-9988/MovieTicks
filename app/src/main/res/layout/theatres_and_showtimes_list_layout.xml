<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv_theatreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:text="Theatre Name"/>
    <TextView
        android:id="@+id/tv_theatreAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="15dp"
        android:textSize="10dp"
        android:text="Theatre address"
        android:layout_below="@id/tv_theatreName"/>



       <LinearLayout
        android:id="@+id/ll_showTimes"

        android:orientation="horizontal"
        android:layout_width="wrap_content"
         android:layout_margin="10dp" android:layout_below="@id/tv_theatreAddress"
        android:layout_height="wrap_content"/>









</RelativeLayout>