<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/MovieImg"
        android:layout_width="68dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/Mname"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/MovieImg"
        android:layout_toRightOf="@+id/MovieImg"
        android:text="TextView"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="66dp" />

    <TextView
        android:id="@+id/mExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/mCertificate"
        android:layout_toRightOf="@+id/mCertificate"
        android:background="@drawable/tv_border"
        android:textColor="@color/mainTheme"
        android:text="2D"
        android:textSize="7dp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="229dp" />

    <TextView
        android:id="@+id/mCertificate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="0dp"
        android:textAlignment="center"
        android:textColor="@color/mainTheme"
        android:background="@drawable/tv_border"
        android:layout_toEndOf="@+id/MovieImg"
        android:layout_toRightOf="@+id/MovieImg"
        android:text="Certificate"
        android:singleLine="true"
        android:textSize="7dp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="229dp" />

    <TextView
        android:id="@+id/mlanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/tv_border"
        android:layout_toEndOf="@+id/MovieImg"
        android:textColor="@color/mainTheme"
        android:layout_toRightOf="@+id/MovieImg"
        android:text="Language"
        android:textSize="9dp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="229dp" />

    <TextView
        android:id="@+id/Mcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/MovieImg"
        android:layout_toRightOf="@+id/MovieImg"
        android:singleLine="true"
        android:text="TextView"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="229dp" />


</RelativeLayout>